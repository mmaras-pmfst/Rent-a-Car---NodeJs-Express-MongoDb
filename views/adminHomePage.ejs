<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/styles.css" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
      integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN"
      crossorigin="anonymous"
    />
    <script
      src="https://code.jquery.com/jquery-3.2.1.min.js"
      crossorigin="anonymous"
    ></script>

    <title>Document</title>
  </head>
  <body class="adminHomeBody">
    <header>
      <div class="logo">-L-O-G-O-</div>
      <nav>
        <ul>
          <li><a class="active" href="/admin/home">Home</a></li>
          <li><a href="/admin/reservationslist">All reservations</a></li>
          <li onclick="OpenFormNewCar()"><a href="#">Add new car</a></li>
          <li>
            <a href="#">Add new admin account</a>
          </li>
          <li><a href="/admin/chat">Chat</a></li>
          <li><a class="activeLog" href="/admin/logout">Logout</a></li>
        </ul>
      </nav>
      <div class="menu-toggle">
        <i class="fa fa-bars" aria-hidden="true"></i>
      </div>
    </header>
    <div class="bg-modal" id="bg-modal">
      <div class="modal-content">
        <div class="close" onclick="CloseFormNewCar()" id="close2">+</div>
        <img src="/img/car.png" width="75px" height="70px" alt="" />

        <form action="/admin/addcar" method="POST">
          <input
            class="adminForm-input"
            type="text"
            placeholder="Car brand"
            name="brand"
            required
          />
          <input
            type="text"
            name="model"
            class="adminForm-input"
            id="model"
            placeholder="Car model"
            required
          />
          <input
            class="adminForm-input"
            type="text"
            placeholder="Plate number"
            name="plateNumber"
            required
          />

          <select
            name="category"
            id="category"
            class="adminForm-input"
            required
          >
            <option value="" disabled selected>Select Category</option>
            <option value="AA">A</option>
            <option value="BB">BB</option>
            <option value="CC">CC</option>
            <option value="D">D</option>
            <option value="DD">DD</option>
            <option value="E">E</option>
            <option value="F">F</option>
          </select>
          <input
            class="adminForm-input"
            type="text"
            placeholder="Price per day in â‚¬"
            name="price"
            required
          />
          <select name="location" class="adminForm-input" required>
            <option value="" disabled selected>Select Location</option>
            <option value="Split">Split</option>
            <option value="Zagreb">Zagreb</option>
            <option value="Rijeka">Rijeka</option>
            <option value="Dubrovnik">Dubrovnik</option>
          </select>

          <input type="submit" class="btnYellow" value="Add car" />
        </form>
      </div>
    </div>
    <script type="text/javascript">
      $(document).ready(function () {
        console.log("hello2");
        $(".menu-toggle").click(function () {
          $("nav").toggleClass("active");
        });
      });
      function OpenFormNewCar() {
        document.getElementById("bg-modal").style.display = "flex";
      }
      function CloseFormNewCar() {
        document.getElementById("bg-modal").style.display = "none";
      }
    </script>
  </body>
</html>
